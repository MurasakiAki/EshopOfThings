{% extends 'base.html.twig' %}

{% block title %}Welcome to our e-shop!{% endblock %}

{% block body %}
    <h1>Welcome to our e-shop!</h1>
    <div class="product-list">
        {% for product in products %}
            <a href="{{ path('product_page', {'productId': product.id}) }}" class="product">
                <div>
                    <h2>{{ product.name }}</h2>
                    <p>Price: {{ product.price }} CZK</p>
                    <p>Description: {{ product.description }}</p>
                </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}