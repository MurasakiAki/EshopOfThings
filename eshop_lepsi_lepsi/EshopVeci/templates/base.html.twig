<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}EshopVěcí{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <header>
        <div class="header-main">
            <h1><a href="{{ path('index') }}">The Věci</a></h1>
            <div class="searchbar">
                <input type="text" id="name_to_search" name="name_to_search">
                <button><a href="{{ path('search_name_page') }}">Search</button>
            </div>
            <nav>
                <ul>
                    <li><a href=""><span class="material-symbols-outlined" style="font-size: 35px">person</span></a></li>
                    <li><a href="{{ path('view_cart') }}"><span class="material-symbols-outlined" style="font-size: 35px">shopping_cart</span></a></li>
                    <li id="cat-menu"><a href="" id="brgr"><span class="material-symbols-outlined" style="font-size: 35px">menu</span></a></li>
                </ul>
            </nav>
        </div>
        <div class="searchbar srchmobile">
            <div>
                <input type="text">
                <button type="submit">Search</button>
            </div>
        </div>
        <div class="header-categories">
            <ul>
                <li><a href="{{ path('search_page', {'category': 'home'}) }}">Domácnost</a></li>
                <li><a href="{{ path('search_page', {'category': 'automoto'}) }}">AutoMoto</a></li>
                <li><a href="{{ path('search_page', {'category': 'bathroom'}) }}">Koupelna</a></li>
                <li><a href="{{ path('search_page', {'category': 'mining'}) }}">Ťěžba nerostných surovin</a></li>
                <li><a href="{{ path('search_page', {'category': 'garden'}) }}">Zahrada</a></li>
                <li><a href="{{ path('search_page', {'category': 'sport'}) }}">Sport</a></li>
                <li><a href="{{ path('search_page', {'category': 'food'}) }}">Portaviny</a></li>
            </ul>
        </div>
    </header>
    <body>
        <main>
            {% block body %}{% endblock %}
        </main>
    </body>
    <footer>
        Barnabáš Bernášek & Erik Vaněk - &copy; 2024
    </footer>
</html>
